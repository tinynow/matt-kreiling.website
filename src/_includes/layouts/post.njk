---
layout: layouts/base.njk
templateClass: post
---

<article
  style="view-transition-name: post-{{page.date | htmlDateString}}"
  class="readable"
>
  <h1>
    {%- if mdn %}<code>{%- endif %}{{ title }}{%- if mdn %}</code>{%- endif %}
  </h1>

  <time datetime="{{ page.date | htmlDateString }}"
    >{{ page.date | readableDate }}</time
  >

  {{ content | safe }}
</article>
{%- if collections.posts %} {%- set nextPost = collections.posts |
getNextCollectionItem(page) %} {%- set previousPost = collections.posts |
getPreviousCollectionItem(page) %} {%- if nextPost or previousPost %}
<nav class="post-nav">
  <ul>
    {%- if previousPost %}
    <li>
      Previous:
      <a href="{{ previousPost.url | url }}"
        ><span aria-hidden="true"><~~</span>{{ previousPost.data.title }}</a
      >
    </li>
    {% endif %} {%- if nextPost %}
    <li>
      Next:
      <a href="{{ nextPost.url | url }}"
        >{{ nextPost.data.title }}<span aria-hidden="true">~~></span></a
      >
    </li>
    {% endif %}
  </ul>
</nav>
{%- endif %} {%- endif %}
